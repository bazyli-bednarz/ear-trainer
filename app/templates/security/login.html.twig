{% extends 'base.html.twig' %}

{% block title %}{{ 'ui.page_header.security.login'|trans }}{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <h1 class="h1 mb-5 mt-5 text-center">{{ 'ui.security.signIn'|trans }}</h1>

            <div class="mb-3">
                {{ 'ui.security.youAreLoggedInAs'|trans }} <span class="p-2 custom-background-color custom-color">{{ app.user.username }}</span> ({{ app.user.userIdentifier }})
            </div>
            <div class="mb-3">
                <a href="{{ path('app_logout') }}">{{ 'ui.action.logout'|trans }}</a>
            </div>
        {% else %}

            <h1 class="h1 mb-5 mt-5 text-center">{{ 'ui.security.signIn'|trans }}</h1>
            <div class="login-form">
                <label for="email">{{ 'ui.security.email'|trans }}</label>
                <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control"
                       autocomplete="email" required autofocus>
                <label class="mt-2" for="password">{{ 'ui.security.password'|trans }}</label>
                <input type="password" name="password" id="password" class="form-control"
                       autocomplete="current-password"
                       required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <button class="btn btn-lg btn-primary mt-3 w-100 mb-3" type="submit">
                    {{ 'ui.action.login'|trans }}
                </button>

                <p class="text-center mb-0 small">
                    {{ 'ui.message.dontHaveAccount'|trans }}
                    <a href="{{ url('app_register') }}"> {{ 'ui.action.register'|trans }}</a>
                </p>
            </div>
        {% endif %}
    </form>

{% endblock %}
