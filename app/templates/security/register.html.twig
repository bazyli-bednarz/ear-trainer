{% extends 'base.html.twig' %}

{% block title %}{{ 'ui.page_header.security.register'|trans }}{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    {% if app.user %}
        <h1>
            {{ 'ui.message.loggedInAs'|trans }} {{ app.user.username }}
        </h1>
        <a href="{{ path('app_logout') }}">{{ 'ui.action.logout'|trans }}</a>
    {% else %}
        <h1 class="h1 mb-5 mt-5 text-center">{{ 'ui.page_header.security.register'|trans }}</h1>
        <div class="login-form">

            {{ form_start(registrationForm) }}
            {{ form_label(registrationForm.email) }}
            {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control'} }) }}
            {{ form_label(registrationForm.username) }}
            {{ form_widget(registrationForm.username, { 'attr': {'class': 'form-control'} }) }}
            {{ form_label(registrationForm.password) }}
            {{ form_widget(registrationForm.password, { 'attr': {'class': 'form-control'} }) }}
            {{ form_label(registrationForm.agreeTerms) }}
            {{ form_widget(registrationForm.agreeTerms, { 'attr': {'class': 'form-check-input'} }) }}

            <button class="btn w-100 btn-primary mb-3" type="submit">
                {{ 'ui.action.signUp'|trans }}
            </button>
            {{ form_end(registrationForm) }}

            <p class="text-center mb-0 small">
                {{ 'ui.message.alreadyHaveAccount'|trans }}
                <a href="{{ url('app_login') }}"> {{ 'ui.action.login'|trans }}</a>
            </p>
        </div>
    {% endif %}
{% endblock %}
