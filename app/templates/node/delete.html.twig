{% extends 'base.html.twig' %}

{% block title %}
    {{ 'ui.page_header.nodes.delete'|trans({'%name%': node.name}) }}
{% endblock %}
{% block body %}

    <div class="d-flex gap-3 mb-3 align-items-center">
        <h1>{{ 'ui.page_header.nodes.delete'|trans({'%name%': node.name}) }}</h1>

        {% if back_to_list_path|default(false) %}
            <a href="{{ url(back_to_list_path) }}" class="btn btn-link">
                {{ 'ui.action.back_to_list.node'|trans }}
            </a>
        {% endif %}
    </div>


    {{ form_start(form) }}
    {% if false == form.vars.valid %}
        {% include 'partials/_single_alert_message.html.twig' with {
            type: 'danger',
            message: 'ui.message.form_error'|trans,
        } %}
    {% endif %}
    <div class="row">
        <div class="col-12">
            {{ form_widget(form) }}
            <input type="submit" value="{{ 'ui.action.delete.node'|trans }}" class="btn btn-danger" />
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}
