{#
    parameters:
    - firstNote: First note to play.
    - secondNote: Second note to play.
    - isHarmonic: Whether the interval is harmonic or melodic.
    - form: Form to submit the answer.
#}

<div class="task task--interval" data-first-note="{{ firstNote }}" data-second-note="{{ secondNote }}">
    <button id="play-button" disabled class="disabled" aria-label="{{ 'ui.action.play' }}"><i class="bi bi-hourglass"></i></button>
    <div class="answer mt-5">
        {{ form_start(form) }}
        {{ form_widget(form.intervalAnswer) }}
        {{ form_widget(form.check) }}
        {{ form_end(form) }}
    </div>
</div>
